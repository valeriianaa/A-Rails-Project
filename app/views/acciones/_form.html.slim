= form_for @accion do |f|
  - if @accion.errors.any?
    #error_explanation
      h2 = "#{pluralize(@accion.errors.count, "error")} #{pluralize_without_count(@accion.errors.count, "prohibe", "prohiben")} almacenar esta AcciÃ³n:"
      ul
        - @accion.errors.full_messages.each do |message|
          li = message


  .box.box-info style="width:100%"
    .box-header.with-border
      h3 Datos Generales
    .box-body style="margin-left:40px; margin-right:40px; padding: 30px;" 
      .field
        = f.label :nombre, 'Nombre: (*)'
        = f.text_field :nombre, :class => "form-control"
        .field
          = f.label :key_name, 'Palabra Clave: (*)'
          = f.text_field :key_name
        .field
        = f.label :modelo_ids, 'Modelos: (*)'
        = f.collection_select :modelo_ids, Modelo.all, :id, :nombre, {:prompt => "Seleccione uno o varios modelos"}, {:multiple => true, :id => 'modelo_ids', :class =>'form-control'}
    .box-footer
      p#foot = "(*) Campo Obligatorio"
  
  .actions = f.submit
