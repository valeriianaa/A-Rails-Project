    .box.box-info
      .box-header.with-border
        h3 Detalle de cuota asignada al cliente
      .box-body
        table.table.table-bordered
          tbody
            tr
              td
                strong Proyecto
              td = @cuota_por_cliente.proyecto.nombre
            tr
              td
                strong Concepto de pago
              td = @cuota_por_cliente.concepto_de_pago.nombre
            tr
              td
