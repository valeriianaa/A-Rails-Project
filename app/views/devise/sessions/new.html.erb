<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Iniciar Sesión", :class => "btn btn-primary", :style => "display: block; margin: 0 auto;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
