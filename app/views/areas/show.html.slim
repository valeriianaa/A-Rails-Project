      .box-body
        table.table.table-bordered
          tbody
            tr
              td
                strong Nombre
              td = @area.nombre
            
.row
  .col-xs-1 style="padding-right:40px;"
    a.btn.btn-block.btn-success href=(edit_area_path(@area)) style="width:70px;" id="editar_area"
