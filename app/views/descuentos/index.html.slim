h1 Descuentos

.box
  table class="table table-bordered"
    thead
      tr
        th Nombre
        th Descripcion
        th Porcentaje
        th colspan="3" Acciones

    tbody
      - @descuentos.each do |descuento|
        tr
          td = descuento.nombre
          td = descuento.descripcion
          td = descuento.porcentaje
          td style="padding: 3px;"
              a href=(descuento_path(descuento))
                i.fa.fa-search
              a href=(edit_descuento_path(descuento))
                i.fa.fa-pencil
              a data-confirm=("Â¿Esta Seguro de eliminar?") data-method="delete" href=(descuento_path(descuento)) 
                i.fa.fa-trash

br

= link_to 'Nuevo Descuento', new_descuento_path
