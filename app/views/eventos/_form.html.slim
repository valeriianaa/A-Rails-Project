= form_for @evento do |f|
  - if @evento.errors.any?
    #error_explanation
      h2 = "#{pluralize(@evento.errors.count, "error")} prohibited this evento from being saved:"
      ul
        - @evento.errors.full_messages.each do |message|
          li = message

  .box.box-primary style="width:100%"
    .box-header.with-border
      h3 Datos Generales
    .box-body style="margin-left:40px; margin-right:40px; padding: 30px;" 
      .field
        = f.label :nombre
        = f.text_field :nombre, :class => "form-control"
      .field
        = f.label :descripcion
        = f.text_area :descripcion, :class => "form-control"
      .field
        = f.label :dia
        = f.date_select :dia
      .field
        = f.label :hora
        = f.time_select :hora
      .actions = f.submit
