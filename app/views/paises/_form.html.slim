= form_for @pais do |f|
  - if @pais.errors.any?
    #error_explanation
      h2 = "#{pluralize(@pais.errors.count, "error")} #{pluralize_without_count(@pais.errors.count, "prohibe", "prohiben")} almacenar este PaÃ­s:"
      ul
        - @pais.errors.full_messages.each do |message|
          li = message

  .box.box-info style="width:100%"
    .box-header.with-border
      h3 Datos Generales
    .box-body style="margin-left:40px; margin-right:40px; padding: 30px;" 
      .field
        = f.label :nombre, 'Nombre: (*)'
        = f.text_field :nombre, :class => "form-control"
    .box-footer
      p#foot = "(*) Campo Obligatorio"  
  
  .actions = f.submit
