h1 Actividades

.box
  table class="table table-bordered"
    thead
      tr
        th Nombre
        th Obligatorio
        th Etapa
        th colspan="3" Acciones

    tbody
      - @actividades.each do |actividad|
        tr
          td = actividad.nombre
          td 
            -if actividad.obligatorio == true
              i.glyphicon.glyphicon-ok 
            -else
              i.glyphicon.glyphicon-remove 
          td = actividad.etapa.nombre
          td style="padding: 3px;"
            a href=(actividad_path(actividad))
              i.fa.fa-search
            a href=(edit_actividad_path(actividad))
              i.fa.fa-pencil
            a data-confirm=("Â¿Esta Seguro de eliminar?") data-method="delete" href=(actividad_path(actividad)) 
              i.fa.fa-trash

br

= link_to 'Nueva Actividad', new_actividad_path
